<%= form_for @menu, :html =>{:class=>"form-horizontal"} do |f| %>

  <div class="boxforforms">
  <div class="control-group ">
  	
     <%= f.text_field :parent_id, :value=>@parent_id%>
  
  <div class="control-group">
  	
  	<%= f.text_field :role_id, :value=>@role_id%>  
  	
    <%= f.hidden_field(:user_id) %>
    <div class="control-group">
  	<%= f.label :title,:class =>"control-label"%>
  	<div class="controls">
     <%= select_tag('menu[bookmark_id]', options_from_collection_for_select(@bookmark, 'id', 'title'),:include_blank =>"") %>
     </div>
      </div>
       <div class="control-group">
  	 <%= f.label :position, :class =>"control-label" %>
  	 <div class="controls">
     <%= f.number_field :position %>
   </div>
  </div>
  <div class="actions controls">
    <%= f.submit :class =>"btn btn-primary " %>    
 </div>
 </div>
<% end %>
	
