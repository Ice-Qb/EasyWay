<%= form_for @event, :html =>{:class=>"form-horizontal"} do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="control-group">
    <%= f.label :events, :class => "control-label" %>
	<div class="controls">
    	<%= select_tag :events, options_from_collection_for_select(@events, "id","name"),{ :include_blank => ''} %>
  	</div>
</div>

<div class="control-group">
	
    <%= f.label :name, :class=>"control-label" %>
    <div class="controls">
    	<%= f.text_field :name %>
    </div>
</div>
<div class="control-group">
    <%= f.label :event_type_id, :class=>"control-label" %>
	<div class="controls">
    	<%= f.select :event_type_id, options_from_collection_for_select(@event_types, "id","name", @event.event_type_id),{ :include_blank => ''} %>
  	</div>
</div>
<div class="control-group">
    <%= f.label :start_at, :class=>"control-label" %>
    <div class="controls">
    	<%= f.text_field :start_at %>
    </div>
</div>
<div class="control-group">
    <%= f.label :end_at, :class=>"control-label" %>
    <div class="controls">
    	<%= f.text_field :end_at %>
    </div>
</div>
<div id="fieldsDiv" class="control-group">
<%if !@event_resources.blank?%>
	<%@event_resources.each do |resource|%>
		<div class='control-group'>
			<%= hidden_field_tag "Resources[][id]", resource.id%>
			<label class='control-label' name=Resources[][value]>Event Resource</label>
		<div class='controls'>
			<%= select_tag "Resources[][value]", options_from_collection_for_select(@resources, "id", "description", resource.resource_id)%>
		<div>
			<%= link_to '#', :class => 'btn', :onclick => 'event_remove_resource(this)', :id => resource.id do%>
				Remove Field
			<% end%>
		</div>
		</div>
		</div>
	<% end %>
<% end %>
</div>
<div class="control-group">
	<div class="controls">
		<a href="#" onclick="Add_resource_to_event()">Add resource</a>
	</div>
</div>
<div class="control-grnameoup">
   	<%= f.label :recurrence_id, :class=>"control-label" %>
  	<div class="controls">
  		<%= f.select :recurrence_id, options_from_collection_for_select(@recurrences, "id","days_of_week", @event.recurrence_id),{ :include_blank => ''} %>
  	</div>  
</div>

  <div class="actions controls">
    <%= f.submit %>
  </div>
<% end %>
