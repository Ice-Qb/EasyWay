<div class="lll ">
<%= form_for @user, :as => :user, :url => sign_in_path(@user) do |f| %>
  <form class="form-inline">
    <%= f.label 'username or email:' %>
    <%= f.text_field :username %>
  </form>
  <form class="form-inline">
    <%= f.label 'password:' %>
    <%= f.password_field :password, :class =>"pull-right" %>
  </form>
  <form class="text-center">
  <%= f.check_box :remember_me %>
</form>
  <div class="text-center">
    <%= f.submit 'Sign In', :class =>"btn btn-primary"%>&nbsp;&nbsp;&nbsp;
    <%= f.submit 'Clear Form', :type => 'reset', :class =>"btn btn-primary" %>
  </div>
  <p>
  <%= link_to 'forgot your password?', :forgot_password %>
</p>
<% end %>
</div >
