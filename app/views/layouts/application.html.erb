</head>
<body class="bodybg">
	<div class="header">
		<div class="headerTop">
			<div><a href="#myModal" role="button" class="star" data-toggle="modal" ></a></div>

			<div class="modal hide fade in" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				<div class="modal-header">
					<h3 id="myModalLabel" align="center">Creating new bookmark</h3>
				</div>
				<div class="modal-body">
					<%= render :partial => "bookmarks/form", :locals => {:@bookmark => Bookmark.new} %>
				</div>
				<div class="modal-footer">
					<button class="btn" data-dismiss="modal" aria-hidden="true">
						Cancel
					</button>
				</div>
			</div>

			<% end %>
			<div class="logo">
				<a href="http://localhost:3000/">Easy Way</a>

			<div class="logo"><a href="http://localhost:3000/"><img src="/images/logo3.png" width="100"  height="100" border="0" alt="Easy Way"></a></div>			
				<form class="easywaywell span5 pull-right form-inline" >
					<% if current_user %>
  						Logged in as <%= current_user.username %>.
  						<%= link_to "Sign Out", signed_out_path, :class => "btn btn-primary"%>
  						<%= link_to "Account Settings", account_settings_path,:class => "btn btn-primary" %>
  					<%else%>
						<%= link_to "Sign up", new_user_path, :class => "btn btn-primary buttonfloat"%>
						<%= link_to "Sign In", sign_in_path, :class => "btn btn-primary buttonfloat"%> 
					<% end %>		
				</form>
			</div>
			<form class="easywaywell span5 pull-right form-inline" >
				<% if current_user %>
			    Logged in as <%= current_user.username %>.
				<%= link_to "Sign Out", signed_out_path, :class => "btn btn-primary buttonfloat"%>
				<%= link_to "Account Settings", account_settings_path,:class => "btn btn-primary buttonfloat" %>
				<% else %>
				<%= link_to "Sign up", new_user_path, :class => "btn btn-primary buttonfloat"%>
				<%= link_to "Sign In", sign_in_path, :class => "btn btn-primary buttonfloat"%>
				<% end %>
			</form>
		</div>
		<div class="menu-position">
			<% if current_user %>
				<%@user_id=current_user.id%>
				<%@role_id=current_user.roleid%>
			<% else %>
				<%@user_id=""%>
				<%@role_id="5"%>
			<%end%>
			<%= render :partial => "menus/menu" %>
		</div>
		<div class="content ">
			<%= yield%>
		</div>
		<div class="footer">
			<div class="tools"><img src="/images/bootstrap.png"><img src="/images/RoR.png">
			</div>
			<div class="copyright">
				<h5>Designed and built with all the love in the world by group 087-LAMP</h5>
				<h5>&copy;087-LAMP GROUP</h5>
			</div>
			
		</div>
	</body>
