<!DOCTYPE html>
<html>
<head>
  <title>EasyWay</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

<link rel="stylesheet" href="/css/bootstrap.css" type="text/css">
<link rel="stylesheet" href="/css/style.css" type="text/css">
<script src="/jquery-2.0.2.min.js"> </script>
<script src="/js/bootstrap.js"> </script>
</head>
<body class="bodybg">
	<div>
		<div class="header">
			<div class="headerTop">
			<div class="logo"></div>

				<form class="easywaywell span5 pull-right form-inline" >
				<% if current_user %>
  				Logged in as <%= current_user.username %>.
  					<%= link_to "Sign Out", signed_out_path, :class => "btn btn-primary"%>
  					<%= link_to "Account Settings", account_settings_path,:class => "btn btn-primary" %>
  				<%else%>
					<%= link_to "Sign up", new_user_path, :class => "btn btn-primary buttonfloat"%>
					<%= link_to "Sign In", sign_in_path, :class => "btn btn-primary buttonfloat"%> 
				<% end %>		
				</form>
				</div>
				<div class="headerBottom">
					<div class="navbar ">
					
							<ul class="nav">
							<%@Menu_items.each do |menu_item|%>
							   <li><%= link_to menu_item.title, menu_item.url%></li>
							<%end%>
							</ul>
					
					</div>
				</div>
		</div>

			<div class="content ">
			<%=yield%>
		   <div class="i"></div></div>	
				<div class="footer"></div>
	</div>

  
 




</body>
</html>
