<div class="boxforforms">
<p id="notice"><%= notice %></p>


<p>
  <b>Name:</b>
  <%= @notify_event.name %>
</p>

<p>
  <b>Template:</b>
  <%= @notify_event.notify_template_id %>
</p>

<p>
  <b>Event:</b>
  <%= @notify_event.event_id %>
</p>

<p>
	<b>Recipients:</b>
  <table  width="300" class="table-striped">
    <tr>
      <th >Group number</th>
      <th >User name</th>
    </tr>
    <% for recipient in @notify_event.recipients %>
    <tr>
      <td align="center" ><%= recipient.group_number %></td>
      <td align="center" ><%= recipient.user_id %></td>
    </tr>
     <% end %>
  </table>
  
</p>

<p>
  <b>Observer:</b>
  <%= @notify_event.notify_observer_id %>
</p>


<%= link_to 'Edit', edit_notify_event_path(@notify_event) %> |
<%= link_to 'Back', notify_events_path %>
</div>
